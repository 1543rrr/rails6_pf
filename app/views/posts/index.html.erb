<main class="main">
  <div class="inner">
  <div class='flash-message'>
  <%= flash[:notice] %>
  <%= flash[:success] %>
  </div>
    <% if user_signed_in? %>
      <div class="greeting">
        <span>こんにちは、</span>
         <%= link_to "#{current_user.nickname}さん", root_path, class: "post"%>
      </div> 
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'post', collection: @posts %>    
    </div> 
  </div>
</main>